<h1 class="title">Log In</h1>
<br>
<%= form_tag sessions_path, remote: true do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], autofocus: true %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me %>
  </div>
  <br>
  <div class="actions"><%= submit_tag "Log in", class: "btn btn-default btn-lg" %></div>
<% end %>