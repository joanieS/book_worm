<h1 class="title">Sign Up</h1>
<br>
<%= form_for @user, remote: true do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <br>
  <div class="actions"><%= submit_tag "Register", class: "btn btn-default btn-lg" %></div>
<% end %>